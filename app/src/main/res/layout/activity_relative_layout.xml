<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ejercicios2.RelativeLayoutActivity">

    <TextView
        android:id="@+id/tvComida"
        android:textSize="30sp"
        android:layout_centerInParent="true"
        android:text="Selecciona tu comida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tvResComida"
        android:textSize="17sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivStar"
        />

    <Spinner
        android:id="@+id/spinnerComida"
        android:layout_below="@+id/tvComida"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btComida"
        android:text="Seleccionar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerComida"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toTopOf="@+id/spinnerComida"/>

    <ImageView
        android:id="@+id/ivStar"
        android:src="@android:drawable/btn_star"
        android:layout_below="@+id/btComida"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>